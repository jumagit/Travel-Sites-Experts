# .htaccess  (place next to index.html)
RewriteEngine On

# 1. If the request is for a real file or folder → serve it
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2. Otherwise → forward everything to index.html (Vue will handle the route)
RewriteRule ^ index.html [L]